# This program implements the 3 logic functions: and, or, not without using the (and, or, not) operators.

#logical operators = LO
#Range of numbers = RN

#Setting the valid list of inputs 
valid_LO = ["AND","OR"]
valid_RN = ["0","1"]

#Inputs 
LO = input("Enter logic function name (and, or, not): ").upper() #logical operators = LO

#Not logical operator 
if LO == "NOT":
    #User input 
    condition_A = input("Enter value of condition A: ")
    if condition_A in valid_RN:
        if condition_A == "1":
            print("0")
        else:
            print("1")
    else:
        print("Erorr: either A is not a digit, has more than one digit, or is out of the 0,1 range")


elif LO in valid_LO:
    #User input 
    condition_A = input("Enter value of condition A: ")
    condition_B = input("Enter value of condition B: ")
    #Conditions validation 
    if condition_A in valid_RN: #Check if A is in the valid range. RN: Range of numbers 
        if condition_B in valid_RN: #Check if A is in the valid range.
            if LO == "AND": #And logical operator 
                #True&True condition 
                if condition_A != "0":
                    if condition_B != "0":
                        if condition_A == condition_B:
                            print("1")
                    #Not true&true condition 
                    else:
                        print("0")
                else:
                    print("0")
            
            elif LO == "OR": #And logical operator 
                #False&false condition 
                if condition_A == 0:
                    if condition_B == 0: 
                         print("0")
                else:
                    print("1")
        else: 
            print("Erorr: either B is not a digit, has more than one digit, or is out of the 0,1 range")
    else:
        print("Erorr: either A is not a digit, has more than one digit, or is out of the 0,1 range")
else: 
    print("Error: unknown logic function")
